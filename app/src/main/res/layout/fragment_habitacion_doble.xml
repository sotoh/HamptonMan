<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".habitaciones.HabitacionDoble">



    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="17dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="17dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/bitter"
        android:text="Habitación Doble"
        android:textAlignment="center"
        android:textColor="#0d0101"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat" />

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="360dp"
        android:layout_height="495dp"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/habitaciones"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/simple"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            android:text="En la habitacion Doble contamos con dos recamaras en un solo cuarto, tambien cuenta con un baño, una televicion, un escritoro, con vista a la ciudad y wifi."
            android:textSize="25dp"
            android:textColor="#0e0404"
            android:textAlignment="center"/>
    </RelativeLayout>

</FrameLayout>