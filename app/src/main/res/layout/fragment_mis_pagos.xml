<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MisPagos">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- TODO: Update blank fragment layout -->

        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="360dp"
            android:layout_height="490dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/habitaciones"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:text=" Concepto"
                android:textColor="#151414"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/numcalle"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/edits"
                android:editable="false" />

            <TextView
                android:id="@+id/idtxtConcept"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/numcalle"
                android:layout_alignStart="@+id/textView5"
                android:textColor="#151414"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idtxtConcept2"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ciudad"
                android:layout_alignStart="@+id/textView5"
                android:textColor="#151414"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/ciudad"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="180dp"
                android:background="@drawable/edits"
                android:editable="false"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:background="#bb94da" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="290dp"
                android:text="Total"
                android:textColor="#151414"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/estado"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="290dp"
                android:background="@drawable/edits"
                android:editable="false" />

            <Button
                android:id="@+id/gg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="21dp"
                android:background="#c38190b7"
                android:text="Pagar" />
        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>