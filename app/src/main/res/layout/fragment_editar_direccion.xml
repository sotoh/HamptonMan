<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarDireccion">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Direccion"
        android:textAlignment="center"
        android:textColor="#151414"
        android:textSize="36sp"
        android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="490dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/habitaciones">
        <TextView
            android:id="@+id/textView5"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:text=" Calle"
            android:textColor="#151414"
            android:textSize="20dp"
            android:textStyle="bold" />
        <EditText
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="130dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/edits"
            android:hint="Calle"
            android:id="@+id/calle"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:text="Numero de calle"
            android:textColor="#151414"
            android:textSize="20dp"
            android:textStyle="bold" />
        <EditText
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="130dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/edits"
            android:hint=" Numero de calle"
            android:id="@+id/numcalle"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="180dp"
            android:text="Ciudad"
            android:textColor="#151414"
            android:textSize="20dp"
            android:textStyle="bold" />
        <EditText
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="130dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/edits"
            android:hint=" Ciudad"
            android:id="@+id/ciudad"/>
        <TextView
            android:id="@+id/textView8"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="290dp"
            android:text="Estado"
            android:textColor="#151414"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/estado"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="290dp"
            android:hint=" Estado"
            android:background="@drawable/edits"
            />
        <TextView
            android:id="@+id/textView9"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="340dp"
            android:text="Pais"
            android:textColor="#151414"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pais"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="340dp"
            android:hint=" Pais"
            android:background="@drawable/edits"
            />
        <TextView
            android:id="@+id/textView10"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="380dp"
            android:text="Codigo Postal"
            android:textColor="#151414"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/codigop"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="390dp"
            android:hint=" Codigo Postal"
            android:background="@drawable/edits"
            android:inputType="date"/>
        <Button
            android:id="@+id/gg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="430dp"
            android:background="#c38190b7"
            android:text="Guardar Cambios" />
    </RelativeLayout>
</FrameLayout>